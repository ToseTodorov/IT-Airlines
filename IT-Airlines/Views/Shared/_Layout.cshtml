<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>

        #navbarResponsive > ul > li:hover{
            background-color:white;
            border-radius: 2px;
        }

        #navbarResponsive > ul > li > a:hover{
            color: red !important;
            text-decoration: double;
        }


    </style>

</head>
<body class="mt-5">

    @* Navbarot nov *@
    <!-- Navigation -->
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-danger navbar-custom fixed-top">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">IT-Airlines</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav nav ml-auto">
                    <li><a class="btn btn-link text-white" href='@Url.Action("Index","Home")'>Home</a></li>
                    <li><a class="btn btn-link text-white" href='@Url.Action("About","Home")'>About</a></li>
                    <li><a class="btn btn-link text-white" href='@Url.Action("Contact","Home")'>Contact</a></li>
                    @if (this.User.IsInRole("Administrator") || this.User.IsInRole("Moderator"))
                    {
                        <li><a class="btn btn-link text-white" href='@Url.Action("Index","Reservations")'>Reservations</a></li>
                    }
                    <li><a class="btn btn-link text-white" href='@Url.Action("Index","Flights")'>Flights</a></li>
                    <li><a class="btn btn-link text-white" href='@Url.Action("Index","Airplanes")'>Airplanes</a></li>
                    <li><a class="btn btn-link text-white" href='@Url.Action("Index","Airports")'>Airports</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />




        <footer>
            <p style="text-align:center">&copy; @DateTime.Now.Year - IT Airlines Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    
</body>
</html>