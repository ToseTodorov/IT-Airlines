@model IEnumerable<IT_Airlines.Models.Entities.Reservation>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AccountEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Passenger)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoundTrip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstFlight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SecondFlight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstLuggage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SecondLuggage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.AccountEmail)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Passenger)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RoundTrip)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FirstFlight.AirportFrom) -
        @Html.DisplayFor(modelItem => item.FirstFlight.AirportTo) -
        @Html.DisplayFor(modelItem => item.FirstFlight.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SecondFlight.AirportFrom) -
        @Html.DisplayFor(modelItem => item.SecondFlight.AirportTo) -
        @Html.DisplayFor(modelItem => item.SecondFlight.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FirstLuggage.MaximumWeight)kg -
        @Html.DisplayFor(modelItem => item.FirstLuggage.Price)$
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SecondLuggage.MaximumWeight)kg -
        @Html.DisplayFor(modelItem => item.SecondLuggage.Price)$
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
