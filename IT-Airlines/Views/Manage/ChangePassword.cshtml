@model IT_Airlines.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

@Styles.Render("~/Content/css_Manage/Manage_ChangePassword.css")

<div class="col-sm-5 mr-auto ml-auto" id="content">
    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <h3 class="text-center pr5">@User.Identity.Name</h3>
        <div class="text-center"><sup>You can change your password here.</sup></div>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.OldPassword, new { @class = "col-md control-label" })
            <div class="col-md">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Enter your current password" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NewPassword, new { @class = "col-md control-label" })
            <div class="col-md">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Enter your new password" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md control-label" })
            <div class="col-md">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Repeat your new password" })
            </div>
        </div>
        <br>
        <div class="form-group">
            <div class="col-md-offset-2 col-md">
                <input type="submit" value="Change password" class="btn btn-outline-danger btn-block" onclick="smenet()" />
            </div>
        </div>

    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        function smenet() {
            bootbox.confirm("your password is changed successfully", function (answer) {

            })
        }
    </script>
}
