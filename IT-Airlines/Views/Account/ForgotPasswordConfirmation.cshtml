@{
    ViewBag.Title = "Forgot Password Confirmation";
}

    <style>

        body {
            background: url("../../Img/log-sign-in.jpg") no-repeat center center fixed;
            background-repeat: no-repeat;
            background-size: 100% 100%;
        }

        #content {
            width: 100%;
            background-color: white;
            opacity: 0.9;
            border-radius: 5px;
            padding: 5%;
        }

        .btn-outline-danger {
            color: white;
            background-color: #FF5A5A;
        }

        input, select, textarea {
            max-width: 100%;
        }
    </style>
    <div class="col-sm-8 mr-auto ml-auto" id="content">
        <hgroup class="title text-center">
            <h1>@ViewBag.Title.</h1>
        </hgroup>
        <br />
        <div>
            <h4 class="text-center">
                Please check your email to reset your password
            </h4>

        </div>
        </div>
