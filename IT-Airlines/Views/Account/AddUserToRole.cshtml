@model IT_Airlines.Models.UserRoles.AddToRoleModel

@{
    ViewBag.Title = "AddUserToRole";
}

<style>

    body {
        background: url("../../Img/log-sign-in.jpg") no-repeat center center fixed;
        background-repeat: no-repeat;
        background-size: 100% 100%;
    }

    #content {
        width: 100%;
        background-color: white;
        opacity: 0.9;
        border-radius: 5px;
        padding: 5%;
    }

    .btn-outline-danger {
        color: white;
        background-color: #FF5A5A;
    }

    input, select, textarea {
        max-width: 100%;
    }
</style>


<div class="col-sm-5 mr-auto ml-auto" id="content">
    <h2 class="text-center">Add User To Role</h2><hr><br>
    @using (Html.BeginForm("AddUserToRole","Account"))
    {
        <div class="container">
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="role">Select role</label>
                @Html.DropDownListFor(m => m.selectedRole, new SelectList(Model.roles), new { @class = "form-control", id="role" })
            </div>
            <br>
            <button type="submit" class="btn btn-block btn-outline-danger">Add user to role</button>
        </div>
    }
</div>