@model IT_Airlines.Models.Entities.Airplane

@{
    ViewBag.Title = "Create";
}

@Styles.Render("~/Content/css_Airplanes/Airplanes_create.css")

<div class="row">
    <div class="col-sm-5 ml-auto mr-auto" id="content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Create new airplane</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NumOfSeats, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.NumOfSeats, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NumOfSeats, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-12">
                        <div class="btn-group mr-2 btn-block" role="group" aria-label="First group">
                            @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-outline-danger" })
                            <button type="submit" class="btn btn-outline-danger">Create</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
