@model IEnumerable<IT_Airlines.Models.Entities.Airplane>

@{
    ViewBag.Title = "Index";
}


<style>

    body {
        background: url("../../Img/log-sign-in.jpg") no-repeat center center fixed;
        background-repeat: no-repeat;
        background-size: 100% 100%;
    }

    #content {
        width: 100%;
        background-color: white;
        opacity: 0.9;
        border-radius: 10px;
        padding: 5%;
    }

    .flightRow {
        background-color: lightgray;
        padding: 15px;
        border-radius: 10px;
        margin-top: 20px;
        margin-bottom: 30px;
        /*shadow*/
        border: 1px solid;
        padding: 10px;
        box-shadow: 5px 10px #888888;
    }

    #tabelaDiv {
        padding: 15px;
    }

    .btn-outline-danger {
        color: white;
        background-color: #FF5A5A;
    }

    #content .col-sm-3 {
        border-left: 2px red solid;
    }

        #content .col-sm-3:nth-child(1) {
            border-left: 0px;
        }
</style>



<div id="content">
    <div class="row mb-2">
        <div class="col-4"></div>
        <div class="col-4">
            @Html.ActionLink("Create new Airplane", "Create", null, new { @class = "btn btn-block btn-danger" })
        </div>
        <div class="col-4"></div>
    </div>
    <div id="tabelaDiv" class="row text-danger text-center">
        <div class="col-sm-3">
            <b> @Html.DisplayNameFor(model => model.Code) </b>
        </div>
        <div class="col-sm-3">
            <b>@Html.DisplayNameFor(model => model.NumOfSeats) </b>
        </div>
    </div>

    @foreach (var item in Model)
    {
        <div class="flightRow text-center">
            <div class="row">
                <div class="col-sm-3">
                    @Html.DisplayFor(modelItem => item.Code)
                </div>
                <div class="col-sm-3">
                    @Html.DisplayFor(modelItem => item.NumOfSeats)
                </div>

                <div class="col-sm-6 text-center">
                   
                    <div class="row">
                        <div class="col-sm-0 col-md-1"></div>
                        <div class="col-sm-12 col-md-6 mr-auto ml-auto">
                            <div class="btn-group mr-2 btn-block" role="group" aria-label="First group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    }
</div>


