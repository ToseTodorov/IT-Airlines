@model IT_Airlines.Models.Entities.Luggage

@{
    ViewBag.Title = "Details";
}

@Styles.Render("~/Content/css_Luggages/Luggages_details.css")

<div id="content">
    <h4 class="display-4 text-center">Details about the luggage:</h4>
    <hr />
    <div class="row">
        <div id="detali" class="col-sm-7 mr-auto ml-auto">
            <div class="row">
                <div class="col-sm-4">@Html.DisplayNameFor(model => model.MaximumWeight)</div>
                <div class="col-sm">
                    @Html.DisplayFor(model => model.MaximumWeight)
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">@Html.DisplayNameFor(model => model.Price)</div>
                <div class="col-sm">
                    @Html.DisplayFor(model => model.Price)
                </div>
            </div>
            <div class="row">

                <div class="btn-group mr-2 btn-block" role="group" aria-label="First group">
                    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-outline-danger" })
                    @if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-outline-danger" })
                    }

                </div>
            </div>
        </div>
    </div>
