@model IEnumerable<IT_Airlines.Models.Entities.Luggage>

@{
    ViewBag.Title = "Index";
}

<style>

    body {
        background: url("../../Img/log-sign-in.jpg") no-repeat center center fixed;
        background-repeat: no-repeat;
        background-size: 100% 100%;
    }

    #content {
        width: 100%;
        background-color: white;
        opacity: 0.9;
        border-radius: 10px;
        padding: 5%;
    }

    .flightRow {
        background-color: lightgray;
        padding: 15px;
        border-radius: 10px;
        margin-top: 20px;
        margin-bottom: 30px;
        /*shadow*/
        border: 1px solid;
        padding: 10px;
        box-shadow: 5px 10px #888888;
    }

    #tabelaDiv {
        padding: 15px;
    }

    .btn-outline-danger {
        color: white;
        background-color: #FF5A5A;
    }

    #content .col-sm-3 {
        border-left: 2px red solid;
    }

        #content .col-sm-3:nth-child(1) {
            border-left: 0px;
        }

    body > div.bootbox.modal.fade.bootbox-confirm.show > div > div > div.modal-footer > button.btn.btn-primary {
        background-color: #dc3545;
    }
</style>


<div id="content">
    <div class="row mb-2">
        <div class="col-4"></div>
        <div class="col-4">
            @Html.ActionLink("Add new luggage", "Create", "Luggages", null, new { @class = "btn btn-block btn-danger" })
        </div>
        <div class="col-4"></div>
    </div>
    <div id="tabelaDiv" class="row text-danger text-center">
        <div class="col-sm-10 ml-auto mr-auto text-center">
            <h1 class="display-4">List of all types of luggages</h1>
        </div>
    </div>
    <div id="tabelaDiv" class="row text-danger text-center">
        <div class="col-sm-3">
            <b> @Html.DisplayNameFor(model => model.MaximumWeight) </b>(kg)
        </div>
        <div class="col-sm-3">
            <b>@Html.DisplayNameFor(model => model.Price) </b> ($)
        </div>
    </div>

    @foreach (var item in Model)
    {
        <div class="flightRow text-center" id="row-@item.Id">
            <div class="row">
                <div class="col-sm-3">
                    @Html.DisplayFor(modelItem => item.MaximumWeight)kg
                </div>
                <div class="col-sm-3">
                    @Html.DisplayFor(modelItem => item.Price)$
                </div>

                <div class="col-sm-6 text-center">

                    <div class="row">
                        <div class="col-sm-0 col-md-1"></div>
                        <div class="col-sm-12 col-md-6 mr-auto ml-auto">
                            <div class="btn-group mr-2 btn-block" role="group" aria-label="First group">
                                @if (User.IsInRole("Administrator") || User.IsInRole("Moderator"))
                                {
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                                }
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    }
</div>




